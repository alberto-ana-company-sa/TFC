        <Image Source="Lynse_blanco.png" Grid.Column="1" Grid.Row="0" Grid.RowSpan="4" Margin="0.6,0,-0.4,0.2"/>
        <Label Content="¿TIENES PROBLEMAS PARA ENTRAR?" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="121,20.8,0,0" Grid.Row="1" Height="26" Width="206"/>
